# Example secrets file for Personal AI Trainer
# Copy this file to .streamlit/secrets.toml and fill in your actual values

# Gemini API Key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY = "YOUR_GEMINI_API_KEY"

# Cookie encryption key for persistent authentication
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Keep this key secret and stable - changing it will invalidate all sessions
cookie_encryption_key = "YOUR_GENERATED_ENCRYPTION_KEY_HERE"

# Google OAuth 2.0 Configuration
[google_oauth]
# Client credentials from Google Cloud Console
# Get these from: https://console.cloud.google.com/apis/credentials
client_id = "YOUR_CLIENT_ID.apps.googleusercontent.com"
client_secret = "YOUR_CLIENT_SECRET"

# Redirect URI - must match the one configured in Google Cloud Console
# For local development:
redirect_uri = "http://localhost:8501"

# For production on Streamlit Cloud:
# redirect_uri = "https://your-app-name.streamlit.app"

# IMPORTANT:
# - Add .streamlit/secrets.toml to .gitignore
# - In Google Cloud Console, add your redirect_uri to "Authorized redirect URIs"
# - Enable Google Drive API in Google Cloud Console
# - Generate a unique cookie_encryption_key (do NOT use the example value)
